<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="@dimen/_225sdp"
    android:layout_marginBottom="@dimen/_5sdp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_220sdp"
        android:padding="@dimen/_10sdp"
        android:background="@drawable/edit_field_bg">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Covid 19 Update"
                    android:textStyle="bold"
                    android:textColor="@color/theme_color"
                    android:textSize="@dimen/_14ssp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="Mon 14 Aug 12:55"
                    android:textStyle="bold"
                    android:textColor="@color/theme_color"
                    android:textSize="@dimen/_10ssp"/>


            </RelativeLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_140sdp"
                android:src="@drawable/social_page"
                android:layout_marginVertical="@dimen/_5sdp"
                android:scaleType="fitXY"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1 Million new cases found in world Today,it's highest and record break..."
                android:textColor="@color/text_color"
                android:textSize="@dimen/_12ssp"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>